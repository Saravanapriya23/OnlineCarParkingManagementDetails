@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <style>
        header {
            height: 50px;
            width: 100%;
            background-color: lightblue;
        }

        nav {
            float: left;
            width: 200px;
            height: 300px;
            text-align:center;
            background-color: lightgreen;
        }

        footer {
            background-color: lightblue;
            width: 100%;
            height: 30px;
            float: right;
            text-align: center;
        }
    </style>
</head>
<body>
    <header style="text-align:center">
        <h1>Online Car Parking Booking</h1>
    </header>
    <nav>
        @Html.ActionLink("Sign In", "SignIn")<br /><br />
        @Html.ActionLink("Sign Up", "SignUp")

    </nav>
    <div>
        @RenderBody()
    </div>
    <footer style="text-align:center;">
        <div>All rights reserved</div>
    </footer>
</body>
</html>

